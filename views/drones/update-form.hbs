<h2>Update the drone</h2>

<form method="post" action="/drones/{{drones._id}}/edit" class="form">
    <label for="name">name</label>
    <input class="input" type="text" id="name" name="name" value="{{drones._id}}">
    <label for="propellers">propellers</label>
    <input id="propellers" class="input" type="number" name="propellers" value="{{drones.propellers}}">
    <label for="maxSpeed">maxSpeed</label>
    <input id="maxSpeed" class="input" type="number" name="maxSpeed" value={{drones.maxSpeed}}>
    <button class="btn">ok !</button>
</form>